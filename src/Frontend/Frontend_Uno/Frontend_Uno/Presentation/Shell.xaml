<Page x:Class="Frontend_Uno.Presentation.Shell"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Frontend_Uno.Presentation"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:pr="using:Prism.Navigation.Regions"
      xmlns:utu="using:Uno.Toolkit.UI"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        pr:RegionManager.RegionName="HeaderRegion" />

        <ContentControl Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        pr:RegionManager.RegionName="ContentRegion" />
    </Grid>
</Page>
